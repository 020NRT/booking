<script>
let currentUser = null;
let currentRestaurant = null;
let selectedFloor = 1;
let selectedTable = null;

const occupiedTables = ['1-3', '1-8', '2-5', '2-12']; // –ó–∞–Ω—è—Ç—ã–µ —Å—Ç–æ–ª–∏–∫–∏

// Tables configuration
const tableLayouts = {
    1: [ // –≠—Ç–∞–∂ 1
        {id: '1-1', seats: 2}, {id: '1-2', seats: 2}, {id: '1-3', seats: 2}, {id: '1-4', seats: 2}, {id: '1-5', seats: 2}, {id: '1-6', seats: 2},
        {id: '1-7', seats: 4}, {id: '1-8', seats: 4}, {id: '1-9', seats: 4}, {id: '1-10', seats: 4}, {id: '1-11', seats: 4}, {id: '1-12', seats: 4},
        {id: '1-13', seats: 2}, {id: '1-14', seats: 2}, {id: '1-15', seats: 4}, {id: '1-16', seats: 4}, {id: '1-17', seats: 2}, {id: '1-18', seats: 2},
        {id: '1-19', seats: 4}, {id: '1-20', seats: 4}, {id: '1-21', seats: 4}, {id: '1-22', seats: 4}, {id: '1-23', seats: 4}, {id: '1-24', seats: 4}
    ],
    2: [ // –≠—Ç–∞–∂ 2
        {id: '2-1', seats: 2}, {id: '2-2', seats: 2}, {id: '2-3', seats: 2}, {id: '2-4', seats: 2}, {id: '2-5', seats: 2}, {id: '2-6', seats: 2},
        {id: '2-7', seats: 4}, {id: '2-8', seats: 4}, {id: '2-9', seats: 4}, {id: '2-10', seats: 4}, {id: '2-11', seats: 4}, {id: '2-12', seats: 4},
        {id: '2-13', seats: 2}, {id: '2-14', seats: 2}, {id: '2-15', seats: 4}, {id: '2-16', seats: 4}, {id: '2-17', seats: 2}, {id: '2-18', seats: 2},
        {id: '2-19', seats: 4}, {id: '2-20', seats: 4}, {id: '2-21', seats: 4}, {id: '2-22', seats: 4}, {id: '2-23', seats: 4}, {id: '2-24', seats: 4}
    ]
};

function showTab(tab) {
    document.querySelectorAll('#tabs button').forEach(b => b.classList.remove('active'));
    const btn = document.querySelector(`#tabs button[onclick="showTab('${tab}')"]`);
    if(btn) btn.classList.add('active');
    show(tab);
}

function show(id) {
    document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
    document.getElementById(id).classList.add('active');

    if(id === 'history') loadHistory();
    if(id === 'favorites') loadFavorites();
    if(id === 'profile') loadProfile();
}

async function register() {
    const name = document.getElementById('name').value.trim();
    const phone = document.getElementById('phone').value.trim();

    if(!name || !phone) {
        alert("–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è");
        return;
    }

    try {
        const res = await fetch("/users", {
            method: "POST",
            headers: {"Content-Type": "application/json"},
            body: JSON.stringify({name, phone})
        });
        const data = await res.json();
        currentUser = data;
        document.getElementById('tabs').style.display = "flex";
        await loadRestaurants();
        show('home');
    } catch(err) {
        console.error(err);
        alert("–û—à–∏–±–∫–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏");
    }
}

async function loadRestaurants() {
    try {
        const res = await fetch("/restaurants");
        const data = await res.json();
        const list = document.getElementById('restaurant-list');
        list.innerHTML = "";

        data.forEach(r => {
            const card = document.createElement('div');
            card.className = "restaurant-card";

            const isFavorite = currentUser && currentUser.favorites.includes(r.id);

            card.innerHTML = `
                <div class="restaurant-image">
                    <img src="${r.image_url}" alt="${r.name}">
                    <button class="favorite-btn ${isFavorite ? 'active' : ''}" onclick="event.stopPropagation(); toggleFavorite(${r.id}, this)">
                        ${isFavorite ? '‚ù§' : '‚ô°'}
                    </button>
                </div>
                <div class="restaurant-content">
                    <h3>${r.name}</h3>
                    <div class="restaurant-meta">
                        <span>üìç ${r.address}</span>
                        <span>üïí ${r.schedule}</span>
                    </div>
                    <p class="restaurant-description">${r.description}</p>
                    <button class="btn btn-primary btn-small" onclick="openRestaurant(${r.id})" style="width: 100%;">
                        –ó–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞—Ç—å
                    </button>
                </div>
            `;

            list.appendChild(card);
        });
    } catch(err) {
        console.error(err);
    }
}

function toggleFavorite(id, el) {
    if(!currentUser) return;

    if(currentUser.favorites.includes(id)) {
        currentUser.favorites = currentUser.favorites.filter(f => f !== id);
        el.classList.remove("active");
        el.innerHTML = '‚ô°';
    } else {
        currentUser.favorites.push(id);
        el.classList.add("active");
        el.innerHTML = '‚ù§';
    }
}

async function loadFavorites() {
    try {
        const res = await fetch("/restaurants");
        const data = await res.json();
        const list = document.getElementById('favorites-list');
        list.innerHTML = "";

        const favorites = data.filter(r => currentUser.favorites.includes(r.id));

        if(favorites.length === 0) {
            list.innerHTML = '<p style="text-align: center; color: var(--text-secondary); padding: 40px;">–ù–µ—Ç –∏–∑–±—Ä–∞–Ω–Ω—ã—Ö —Ä–µ—Å—Ç–æ—Ä–∞–Ω–æ–≤</p>';
            return;
        }

        favorites.forEach(r => {
            const card = document.createElement('div');
            card.className = "restaurant-card";

            card.innerHTML = `
                <div class="restaurant-image">
                    <img src="${r.image_url}" alt="${r.name}">
                    <button class="favorite-btn active" onclick="event.stopPropagation(); toggleFavorite(${r.id}, this)">‚ù§</button>
                </div>
                <div class="restaurant-content">
                    <h3>${r.name}</h3>
                    <div class="restaurant-meta">
                        <span>üìç ${r.address}</span>
                        <span>üïí ${r.schedule}</span>
                    </div>
                    <p class="restaurant-description">${r.description}</p>
                    <button class="btn btn-primary btn-small" onclick="openRestaurant(${r.id})" style="width: 100%;">
                        –ó–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞—Ç—å
                    </button>
                </div>
            `;

            list.appendChild(card);
        });
    } catch(err) {
        console.error(err);
    }
}

async function openRestaurant(id) {
    try {
        const res = await fetch(`/restaurants/${id}`);
        const r = await res.json();
        currentRestaurant = r;
        document.getElementById('conf-rest').textContent = r.name;

        // Reset selection
        selectedFloor = 1;
        selectedTable = null;

        // Show floor selector
        const floorButtons = document.getElementById('floor-buttons');
        floorButtons.innerHTML = '';

        for(let i = 1; i <= r.floors; i++) {
            const btn = document.createElement('button');
            btn.className = 'floor-btn' + (i === 1 ? ' active' : '');
            btn.innerHTML = `
                <span class="floor-number">${i}</span>
                <span class="floor-label">${i === 1 ? '1-–π —ç—Ç–∞–∂' : '2-–π —ç—Ç–∞–∂'}</span>
            `;
            btn.onclick = () => selectFloor(i, r.floors);
            floorButtons.appendChild(btn);
        }

        // Show first floor by default
        selectFloor(1, r.floors);

        show('booking');
    } catch(err) {
        console.error(err);
    }
}

function selectFloor(floor, totalFloors) {
    selectedFloor = floor;
    selectedTable = null;

    // Update floor buttons
    document.querySelectorAll('.floor-btn').forEach((btn, idx) => {
        btn.classList.toggle('active', idx + 1 === floor);
    });

    // Show table layout
    document.getElementById('table-layout').style.display = 'block';
    renderTableLayout(floor);
}

function renderTableLayout(floor) {
    const grid = document.getElementById('table-grid');
    grid.innerHTML = '';

    const tables = tableLayouts[floor] || [];

    tables.forEach(table => {
        const isOccupied = occupiedTables.includes(table.id);
        const isSelected = selectedTable === table.id;

        const tableItem = document.createElement('div');
        tableItem.className = 'table-item' + 
            (isSelected ? ' selected' : '') +
            (isOccupied ? ' occupied' : '');

        tableItem.onclick = () => {
            if(!isOccupied) selectTable(table.id);
        };

        const tableNum = table.id.split('-')[1];
        const tableClass = table.seats === 2 ? 'table-2' : 'table-4';
        const chairs = table.seats === 2 ? 2 : 4;

        let chairsHTML = '';
        for(let i = 0; i < chairs; i++) {
            chairsHTML += '<div class="chair"></div>';
        }

        tableItem.innerHTML = `
            <div class="table-visual">
                <div class="${tableClass}"></div>
                ${chairsHTML}
                <span class="table-number">${tableNum}</span>
            </div>
        `;

        grid.appendChild(tableItem);
    });
}

function selectTable(tableId) {
    selectedTable = tableId;
    renderTableLayout(selectedFloor);
}

// Setup date & time
const dateInput = document.getElementById('booking-date');
const today = new Date().toISOString().split('T')[0];
dateInput.min = today;
dateInput.value = today;

const timeSelect = document.getElementById('booking-time');
function populateTimes() {
    for(let h = 9; h <= 22; h++) {
        ["00", "30"].forEach(min => {
            if(h === 22 && min === "30") return;
            const option = document.createElement("option");
            const timeStr = `${h.toString().padStart(2,'0')}:${min}`;
            option.value = timeStr;
            option.textContent = timeStr;
            timeSelect.appendChild(option);
        });
    }
}
populateTimes();

async function confirmBooking() {
    const date = dateInput.value;
    const time = timeSelect.value;
    const guests = document.getElementById('booking-guests').value;
    const comment = document.getElementById('booking-comment').value || "–ù–µ—Ç";

    if(!date || !time) {
        alert("–í—ã–±–µ—Ä–∏—Ç–µ –¥–∞—Ç—É –∏ –≤—Ä–µ–º—è");
        return;
    }

    if(!selectedTable) {
        alert("–í—ã–±–µ—Ä–∏—Ç–µ —Å—Ç–æ–ª–∏–∫");
        return;
    }

    const bookingData = {
        user_id: currentUser.id,
        restaurant_id: currentRestaurant.id,
        date, time,
        guests: parseInt(guests),
        comment,
        floor: selectedFloor,
        table: selectedTable
    };

    try {
        const res = await fetch("/bookings", {
            method: "POST",
            headers: {"Content-Type": "application/json"},
            body: JSON.stringify(bookingData)
        });
        const data = await res.json();

        document.getElementById('conf-date').textContent = data.date;
        document.getElementById('conf-time').textContent = data.time;
        document.getElementById('conf-floor').textContent = data.floor + '-–π —ç—Ç–∞–∂';
        document.getElementById('conf-table').textContent = '–°—Ç–æ–ª–∏–∫ ‚Ññ' + data.table.split('-')[1];
        document.getElementById('conf-guests').textContent = data.guests;
        document.getElementById('conf-comment').textContent = data.comment;

        // Add to occupied tables
        occupiedTables.push(selectedTable);

        show('confirmation');
    } catch(err) {
        console.error(err);
        alert("–û—à–∏–±–∫–∞ –ø—Ä–∏ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–∏");
    }
}

async function loadHistory() {
    try {
        const [bookingsRes, restaurantsRes] = await Promise.all([
            fetch("/bookings"),
            fetch("/restaurants")
        ]);

        const bookings = await bookingsRes.json();
        const restaurants = await restaurantsRes.json();

        const list = document.getElementById('history-list');
        list.innerHTML = "";

        const userBookings = bookings.filter(b => b.user_id === currentUser.id);

        if(userBookings.length === 0) {
            list.innerHTML = '<p style="text-align: center; color: var(--text-secondary); padding: 40px;">–ù–µ—Ç –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–π</p>';
            return;
        }

        userBookings.reverse().forEach(b => {
            const restaurant = restaurants.find(r => r.id === b.restaurant_id);
            const name = restaurant ? restaurant.name : `–†–µ—Å—Ç–æ—Ä–∞–Ω #${b.restaurant_id}`;

            const item = document.createElement('div');
            item.className = "history-item";
            item.innerHTML = `
                <div style="display: flex; justify-content: space-between; align-items: start;">
                    <div>
                        <h4 style="font-size: 18px; font-weight: 700; margin-bottom: 8px;">${name}</h4>
                        <p style="color: var(--text-secondary); margin-bottom: 4px;">
                            üìÖ ${b.date} –≤ ${b.time} ‚Ä¢ üë• ${b.guests} ${b.guests === 1 ? '–≥–æ—Å—Ç—å' : '–≥–æ—Å—Ç–µ–π'}
                        </p>
                        <p style="color: var(--text-secondary); margin-bottom: 4px;">
                            üè¢ ${b.floor}-–π —ç—Ç–∞–∂ ‚Ä¢ ü™ë –°—Ç–æ–ª–∏–∫ ‚Ññ${b.table ? b.table.split('-')[1] : '–Ω–µ —É–∫–∞–∑–∞–Ω'}
                        </p>
                        ${b.comment !== '–ù–µ—Ç' ? `<p style="color: var(--text-muted); font-size: 14px;">üí¨ ${b.comment}</p>` : ''}
                    </div>
                    <div style="color: var(--success); font-size: 24px;">‚úì</div>
                </div>
            `;
            list.appendChild(item);
        });
    } catch(err) {
        console.error(err);
    }
}

function loadProfile() {
    if(!currentUser) return;

    const info = document.getElementById('profile-info');
    info.innerHTML = `
        <div style="width: 80px; height: 80px; margin: 0 auto 24px; background: var(--accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 32px; font-weight: 700; color: white;">
            ${currentUser.name.charAt(0).toUpperCase()}
        </div>
        <p style="font-size: 18px; margin: 8px 0;"><strong>–ò–º—è:</strong> ${currentUser.name}</p>
        <p style="font-size: 18px; margin: 8px 0;"><strong>–¢–µ–ª–µ—Ñ–æ–Ω:</strong> ${currentUser.phone}</p>
        <p style="font-size: 18px; margin: 8px 0;"><strong>–ò–∑–±—Ä–∞–Ω–Ω—ã—Ö:</strong> ${currentUser.favorites.length}</p>
    `;
}
</script>

</body>
</html>
"""


# --- Endpoints ---
@app.get("/", response_class=HTMLResponse)
def get_home():
    return HTMLResponse(content=html_content, status_code=200)


@app.post("/users", response_model=User)
def create_user(u: UserCreate):
    global next_user_id
    user = User(id=next_user_id, name=u.name, phone=u.phone, favorites=[])
    users.append(user)
    next_user_id += 1
    return user


@app.get("/restaurants", response_model=List[Restaurant])
def get_restaurants():
    return restaurants


@app.get("/restaurants/{restaurant_id}", response_model=Restaurant)
def get_restaurant(restaurant_id: int):
    for r in restaurants:
        if r.id == restaurant_id:
            return r
    raise HTTPException(status_code=404, detail="–†–µ—Å—Ç–æ—Ä–∞–Ω –Ω–µ –Ω–∞–π–¥–µ–Ω")


@app.post("/bookings", response_model=Booking)
def create_booking(b: BookingCreate):
    global bookings, next_booking_id
    booking = Booking(
        id=next_booking_id,
        user_id=b.user_id,
        restaurant_id=b.restaurant_id,
        date=b.date,
        time=b.time,
        guests=b.guests,
        comment=b.comment,
        floor=b.floor,
        table=b.table
    )
    bookings.append(booking)
    next_booking_id += 1
    return booking


@app.get("/bookings", response_model=List[Booking])
def list_bookings():
    return bookings
